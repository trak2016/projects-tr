<h1>Moje rezerwacje</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Student</th>
      <th>Temat</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.where(:supervisor_email => current_user.email).each do |reservation| %>
      <tr>
        <td><%= reservation.student_email %></td>
        <td>
          <%= Project.where(:reserved => true, :id => reservation.project_id).pluck(:topic).join %>
        </td>
        <td><%= link_to 'Usuń', reservation, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
